<Window x:Class="MSSSStaffFileSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Selector" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Grid Background="#FFF9F9F9" Margin="16">
        <Grid.RowDefinitions>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Lists -->
            <RowDefinition Height="*"/>
            <!-- Name/Number -->
            <RowDefinition Height="Auto"/>
            <!-- Keyboard shortcut display -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search bar + action button -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,12">
            <Button x:Name="btnToggleDirectory" DockPanel.Dock="Left" Width="100" Height="30" Margin="12,0,0,0" Content="Toggle Dictionary" Click="BtnToggleDirectory_Click"/>
            <TextBox x:Name="tbSearch" Height="30" VerticalAlignment="Center" ToolTip="Search Bar" TextChanged="TbFilter_TextChanged"/>
        </DockPanel>

        <!-- Dual listboxes with move buttons -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left list -->
            <GroupBox Header="All Staff ListBox" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="lbStaffList"
                             Margin="0"
                             IsHitTestVisible="True"
                             Focusable="True"
                             SelectedValuePath="Key"
                             PreviewMouseLeftButtonUp="LbStaffList_ItemClicked"/>

                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Right"
                                  Background="#22000000" ShowsPreview="True"/>
                </Grid>
            </GroupBox>

            <!-- Right list -->
            <GroupBox Grid.Column="2" Header="Filtered Staff Listbox" Margin="8,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Left"
                                  Background="#22000000" ShowsPreview="True"/>

                    <ListBox x:Name="lbFilteredStaffList" Grid.Column="1" Margin="0" PreviewMouseLeftButtonUp="LbFilteredStaffList_ItemClicked"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Name / Number row -->
        <Grid Grid.Row="2" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtNameBox" Grid.Column="1" Height="28"/>

            <TextBlock Grid.Column="3" Text="Number:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtNumberBox" Grid.Column="4" Height="28"/>
        </Grid>

        <!-- Keyboard shortcut display -->
        <Border Grid.Row="3" BorderBrush="#33000000" BorderThickness="1" CornerRadius="6" Padding="14" Background="White">
            <TextBlock x:Name="ShortcutDisplay"
                       Text="Keyboard Shortcut Display"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Status bar -->
        <StatusBar Grid.Row="4" Margin="0,12,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Admin Popup -->
        <Popup x:Name="adminPopup" IsOpen="False" Placement="Center">
            <Border BorderBrush="Black" BorderThickness="1" Background="LightYellow" Padding="10">
                <StackPanel Width="350">
                    <TextBlock Text="Admin Control Panel" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Grid layout for labels and textboxes -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Staff ID:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="txtAdminStaffID" Grid.Column="1" Height="28" IsReadOnly="True" Margin="0,0,0,5"/>

                        <TextBlock Grid.Column="3" Text="Staff Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="txtAdminStaffName" Grid.Column="4" Height="28" Margin="0,0,0,5"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="Add" Width="70" Margin="5,0" Click="BtnAdminAdd_Click"/>
                        <Button Content="Update" Width="70" Margin="5,0" Click="BtnAdminUpdate_Click"/>
                        <Button Content="Delete" Width="70" Margin="5,0" Click="BtnAdminDelete_Click"/>
                        <Button Content="Clear" Width="70" Margin="5,0" Click="BtnAdminClear_Click"/>
                    </StackPanel>

                    <!-- Close button -->
                    <Button Content="Close" Width="70" HorizontalAlignment="Center" Click="BtnClosePopup_Click"/>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Window>
